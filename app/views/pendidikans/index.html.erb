<h1>Daftar Pendidikan</h1>
<%= link_to 'Buat Pendidikan Baru', new_pendidikan_path, class: "btn btn-primary" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Level pend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pendidikans.each do |pendidikan| %>
      <tr>
        <td class="col-md-4"><%= pendidikan.level_pend %></td>
        <td class="col-md-2"> <%= link_to 'Tampilkan', pendidikan, class: "btn btn-primary" %> </td>
        <td class="col-md-2"> <%= link_to 'Edit', edit_pendidikan_path(pendidikan), class: "btn btn-primary" %> </td>
        <td class="col-md-2"> <%= link_to 'Hapus', pendidikan, method: :delete,
        data: { confirm: 'Anda yakin akan menghapus?' }, class: "btn btn-primary" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>


