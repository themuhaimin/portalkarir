<% provide(:title, "Edit Profil") %>
<%= form_for [@user, @profil], :url => user_profil_path(@user) do |f| %>
<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="2"><h1>Edit Profil Anda</h1></th>
    </tr>
  </thead>
  <tbody>
    <tr><td class="col-md-3"><%= f.label :nama_lengkap %></td>
    <td class="col-md-7"><%= f.text_field :nama_lengkap %></td></tr>
    <tr><td class="col-md-3"><%= f.label :no_identitas %></td>
    <td class="col-md-7"><%= f.text_field :no_identitas %></td></tr>
    <tr><td class="col-md-3"><%= f.label :jenis_kelamin %></td>
    <td class="col-md-7"><%= f.radio_button :jenis_kelamin, false, :value => false %>
        <%= label :jenis_kelamin, "Laki-laki       " %>
        <%= f.radio_button :jenis_kelamin, true, :value => true %>
        <%= label :jenis_kelamin, "Perempuan"%></td></tr>
    <tr><td class="col-md-3"><%= f.label :alamat %></td>
    <td class="col-md-7"> <%= f.text_area :alamat %></td></tr>
    <tr><td class="col-md-3"><%= f.label :no_hp %></td>
    <td class="col-md-7"> <%= f.text_field :no_hp %></td></tr>
    <tr><td class="col-md-3"><%= f.label :tempat_lahir %></td>
    <td class="col-md-7"> <%= f.text_field :tempat_lahir %></td></tr>
    <tr><td class="col-md-3"><%= f.label :tgl_lahir %></td>
    <td class="col-md-7"> <%= f.date_select :tgl_lahir, :start_year => Time.now.year - 50, :end_year => Time.now.year  %><br/>
    <tr><td class="col-md-3"><%= f.label :pendidikan_id, "Pendidikan Terakhir" %></td><td> <%= f.collection_select :pendidikan_id, 
                                        Pendidikan.order(:level_pend),:id,:level_pend, include_blank: true  %><br/>
    <tr><td class="col-md-3"><%= f.label :nama_pend  %></td>
    <td class="col-md-7"> <%= f.text_field :nama_pend %></td></tr>
    <tr><td class="col-md-3"><%= f.label :jurusan %></td>
    <td class="col-md-7"> <%= f.text_field :jurusan %></td></tr>
    <tr><td class="col-md-3"><%= f.label :nilai %></td>
    <td class="col-md-7"> <%= f.text_field :nilai %></td></tr>
  </tbody>
</table>
    
  <div class="actions">
    <%= f.submit "Simpan", class: "btn btn-primary" %>
  </div>
<% end %>